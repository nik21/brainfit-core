    "description": "Brainfit Core",
    "type": "project",
    "version": "1.2.1",
    "require": {
        "php":">=5.4.0",
        "ext-pdo": "*",
        "ext-apcu": "*",
        "symfony/yaml": "2.5.3"
    },

    "suggest": {
        "ext-memcached": "Memcached class",
        "ext-redis": "For use Storage class",
        "elasticsearch/elasticsearch": "Provide simple class",
        "react/react": "For running daemon processes",
        "smarty/smarty": "If your use Smarty as output interface"
    },

    "autoload": {
        "psr-4": {
            "Brainfit\\": "src"
        }
    },

    "repositories":[
        {
